            .modal-content
                .modal-header
                    h5.mt-0.modal-title Small modal
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span &times;
                .modal-body
                    p Vestibulum molestie commodo elit ut feugiat.
    // Form Modal
    .modal.fade.demo-modal-form
        .modal-dialog
            .modal-content
                .modal-header
                    h5.mt-0.modal-title Form modal
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span &times;
                .modal-body
                    form
                        .form-group
                            label.control-label(for='recipient') To:
                            input#recipient.form-control(type='text')
                        .form-group
                            label.control-label(for='message-content') Message content:
                            textarea#message-content.form-control
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                    button.btn.btn-info(type='button') Save changes
    // Alert Modal
    .modal.fade.demo-modal-alert
        .modal-dialog.modal-sm
            .modal-content
                .modal-body.bg-gradient-danger.text-white
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
