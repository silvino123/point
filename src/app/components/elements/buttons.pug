extends ../core/core.layout.pug
block pagetitle
    - pageTitle = 'Buttons'
block content

    mixin dropdown_button(type)
        // START button group
        .dropdown.btn-group.mb-4
            button.btn.dropdown-toggle(type='button', class='btn-'+type, data-toggle="dropdown")
                = type
                span.caret
            .dropdown-menu(role='menu')
                a.dropdown-item(href='#') Action
                a.dropdown-item(href='#') Another action
                a.dropdown-item(href='#') Something else here
                .dropdown-divider
                a.dropdown-item(href='#') Separated link
        // END button group

    mixin dropdown_split(type)
        // START button group
        .btn-group.dropdown
            button.btn(type='button', class='btn-'+type) Action
            button.btn.dropdown-toggle(type='button', class='btn-'+type, data-toggle="dropdown")
                span.caret
                span.sr-only= type
            .dropdown-menu(role='menu')
                a.dropdown-item(href='#') Action
                a.dropdown-item(href='#') Another action
                a.dropdown-item(href='#') Something else here
                .dropdown-divider
                a.dropdown-item(href='#') Separated link
        // END button group

    .container.container-lg

        // START card
        .cardbox
            .cardbox-heading
                .cardbox-title Button colors
                small Standard Bootstrap buttons and color variants
            .cardbox-body
                .text-center
                    button.mb-4.btn.btn-secondary(type='button') Secondary
                    button.mb-4.btn.btn-primary(type='button') Primary
                    button.mb-4.btn.btn-success(type='button') Success
                    button.mb-4.btn.btn-info(type='button') Info
                    button.mb-4.btn.btn-warning(type='button') Warning
                    button.mb-4.btn.btn-danger(type='button') Danger
                    br
                    br
                    a(href="#").btn.btn-link Button Link
                    button(type='button').btn.btn-secondary.mr-3 button tag
                    a(href="#").btn.btn-secondary anchor tag
        // END card
        // START card
        .cardbox
            .cardbox-heading
                .cardbox-title Gradient Button colors
                small
                    |Add class 
                    code .btn-gradient
                    | to standard Bootstrap buttons
            .cardbox-body
                .text-center
