                    button.mb-4.btn.btn-lg.btn-gradient.wd-sm.btn-primary(type='button') Primary
                    button.mb-4.btn.btn-lg.btn-gradient.wd-sm.btn-success(type='button') Success
                    button.mb-4.btn.btn-lg.btn-gradient.wd-sm.btn-info(type='button') Info
                    button.mb-4.btn.btn-lg.btn-gradient.wd-sm.btn-warning(type='button') Warning
                    button.mb-4.btn.btn-lg.btn-gradient.wd-sm.btn-danger(type='button') Danger
